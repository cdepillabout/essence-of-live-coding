test-suite essenceoflivecoding
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs: test
  build-depends:
      base >=4.11 && <4.13
    , syb == 0.7.*
    , dunai == 0.5.*
    , essenceoflivecoding

executable Demo
  main-is: Demo.hs
  hs-source-dirs: app
  build-depends:
      base >=4.11 && <4.13
    , dunai == 0.5.*
    , essenceoflivecoding

